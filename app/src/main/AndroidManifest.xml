<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mbahgojol.chami">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChaMi"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.main.files.DetailFileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.meeting.AddMeetingActivity"
            android:exported="false" />
        <activity
            android:name=".login.PasswordLoginActivity"
            android:exported="false" />
        <activity
            android:name=".login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".signup.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.chat.login.CreateActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.chat.personal.detail.DetailPersonalChatActivity"
            android:exported="false"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>