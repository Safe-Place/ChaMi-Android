<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_constraintStart_toStartOf="parent"
            android:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:fontFamily="@font/inter_bold"
            android:text="Validasi User"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="40dp" />
    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/custom_round_shadow_bg">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="70dp"
            android:layout_marginHorizontal="@android:dimen/thumbnail_width"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/inter_bold"
                android:text="@string/nama_pegawai"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tvIdPegawai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/inter_reguler"
                android:text="@string/id_pegawai"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvJabatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/inter_reguler"
                android:text="@string/posisi_pegawai"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:backgroundTint="@color/stream_gray"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:padding="15dp"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:background="@drawable/custom_round_shadow_bg">

            <TextView
                android:layout_width="wrap_content"
                android:text="Request"
                android:fontFamily="@font/inter_bold"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:paddingTop="15dp"
                android:text="@string/req_validasi"
                android:fontFamily="@font/inter_medium"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center">

            <Button
                android:layout_width="150dp"
                android:drawableRight="@drawable/ic_baseline_vector_x"
                android:backgroundTint="@color/red_lid_bg"
                android:shadowColor="@color/red_lid"
                android:textColor="@color/black"
                android:text="Tolak"
                android:fontFamily="@font/inter_bold"
                android:layout_height="wrap_content"/>


            <Button
                android:layout_width="150dp"
                android:drawableRight="@drawable/ic_baseline_vector_v"
                android:backgroundTint="@color/green_lid_bg"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"
                android:text="Terima"
                android:fontFamily="@font/inter_bold"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.cardview.widget.CardView>