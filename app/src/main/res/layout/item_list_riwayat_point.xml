<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:paddingBottom="8dp"
    android:layout_marginBottom="10dp">
    <TextView
        android:id="@+id/tvJenis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Pembelian"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/namaPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_reguler"
        android:text="Unlimited PUBG"
        android:textSize="16sp"
        card_view:layout_constraintStart_toStartOf="@id/tvJenis"
        card_view:layout_constraintTop_toBottomOf="@id/tvJenis" />

    <TextView
        android:id="@+id/tvTanggalPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_reguler"
        android:text="20 Mei 2022"
        android:textSize="15sp"
        card_view:layout_constraintStart_toStartOf="@id/namaPoint"
        card_view:layout_constraintTop_toBottomOf="@id/namaPoint"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/nominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_reguler"
        android:text="1000"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="15dp"
        android:textSize="17sp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.0"
        card_view:drawableStartCompat="@drawable/ic_point"
        card_view:drawableTint="@color/yellow" />

    <TextView
        android:id="@+id/tvStatusPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_bg_round_stroke_green"
        android:fontFamily="@font/inter_reguler"
        android:paddingHorizontal="5dp"
        android:paddingVertical="3dp"
        android:text="Berhasil"
        android:layout_marginTop="10dp"
        android:textColor="@color/greenTua"
        android:textSize="12sp"
        card_view:layout_constraintEnd_toEndOf="@+id/nominal"
        card_view:layout_constraintTop_toBottomOf="@+id/nominal" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_grey"
        android:layout_marginTop="4dp"
        card_view:layout_constraintTop_toBottomOf="@id/tvTanggalPoint"/>


</androidx.constraintlayout.widget.ConstraintLayout>