    <ImageView
        android:id="@+id/avatar"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_marginTop="132dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGantiAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="@string/ganti_foto"
        android:textColor="@color/teal_200"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/avatar"
        app:layout_constraintStart_toStartOf="@+id/avatar"
        app:layout_constraintTop_toBottomOf="@+id/avatar" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_account_circle_24"
                app:tint="@color/black" />

            <EditText
                android:id="@+id/nama"
                style="@style/inputTextEditProfil"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:text="Annisa" />
        </LinearLayout>

        <LinearLayout
            style="@style/linearLayoutSignup"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_people_24"
                app:tint="@color/black" />

            <EditText
                android:id="@+id/divisi"
                style="@style/inputTextEditProfil"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:text="Divisi Digital Center" />
        </LinearLayout>

        <LinearLayout
            style="@style/linearLayoutSignup"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_assignment_ind_24"
                app:tint="@color/grey" />

            <EditText
                android:id="@+id/idPegawai"
                style="@style/inputTextSignup"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="IOH2020122" />
        </LinearLayout>

        <LinearLayout
            style="@style/linearLayoutSignup"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_email_24"
                app:tint="@color/grey" />

            <EditText
                android:id="@+id/email"
                style="@style/inputTextSignup"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="user@gmail.com" />
        </LinearLayout>
        <LinearLayout
            style="@style/linearLayoutSignup"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_work_24"
                app:tint="@color/grey" />

            <EditText
                android:id="@+id/posisi"
                style="@style/inputTextSignup"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Agent" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>